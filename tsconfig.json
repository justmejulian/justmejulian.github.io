{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.astro"
  ],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "@layouts/*": ["./src/layouts/*"],
      "@components/*": ["./src/components/*"],
      "@preact/*": ["./src/components/preact/*"],
      "@utils/*": ["./src/utils/*"],
      "@content/*": ["./src/content/*"],
      "@images/*": ["./src/images/*"]
    }
  }
}
